@model IEnumerable<FoodDeliveryApp.Models.CartItem>

@{
    ViewData["Title"] = "Your Cart";
}

<h2 class="text-center mb-4">🛒 Your Cart</h2>

@if (!Model.Any())
{
    <p class="text-center text-muted">Your cart is empty.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Item</th>
                <th>Restaurant</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cart in Model)
            {
                <tr>
                    <td>@cart.MenuItem?.Name</td>
                    <td>@cart.MenuItem?.Restaurant?.Name</td>
                    <td>@cart.Quantity</td>
                    <td>₹@cart.MenuItem?.Price</td>
                    <td>₹@(cart.Quantity* cart.MenuItem!.Price)</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end mt-3">
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">Continue Shopping</a>
    </div>
}

